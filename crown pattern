#include<iostream>
using namespace std;
int main()
{
    int n;
    cin>>n;
    for(int i=0;i<n;i++)//rows
    {
    for(int j=0;j<=i;j++){//columns 1triangle
        cout<<"*";
    }
   for(int k=0;k<(n-i)-1;k++){//empty
       cout<<"  ";
    }for(int s=0;s<=i;s++){
        cout<<"*";//center
        }
        for(int d=0;d<i;d++){
        cout<<"*";//right
        }
        for(int r=0;r<(n-i)-1;r++){
       cout<<"  ";
        } for(int p=0;p<=i;p++){
        cout<<"*";
        }
        
    cout<<"\n";
    }
    for(int a=0;a<n;a++){
        for(int t=0;t<(2*n);t++){
            if(a==0||t==0||a==n-1||t==2*n-1)
            cout<<"* ";
            else
            cout<<"  ";
        }cout<<"\n";
            
        }
    }
