#include<iostream>
using namespace std;
int main()
{
    int n;
    cin>>n;
    for(int i=0;i<n;i++)//rows
    {
    for(int j=0;j<(n-i);j++){//columns 1triangle
        cout<<" ";
    }for (int k=0;k<i;k++)
    {cout<<"* ";
    
    }cout<<"\n";
}
for(int i=0;i<n;i++)//rows
    {
    for(int j=0;j<i;j++){//columns 1triangle
        cout<<" ";
    }for (int k=0;k<n-i;k++)
    {cout<<"* ";
    
}cout<<"\n";}
}
